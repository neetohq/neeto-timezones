{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "plugin:jsx-a11y/recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "jsx-a11y",
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": 0,
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "react/jsx-filename-extension": [2, { "extensions": [".js:", ".jsx", ".ts", ".tsx"] }]
    },
    "settings": {
        "react": {
        "pragma": "h"
        }
    }
}
